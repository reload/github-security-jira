{
    "name": "reload/github-security-jira",
    "description": "Create Jira tickets for GitHub security alerts",
    "license": "MIT",
    "require": {
        "php": ">=8.1",
        "softonic/graphql-client": "^1.2",
        "symfony/console": "^5",
        "symfony/yaml": "^5.0",
        "reload/jira-security-issue": "^1.0.0"
    },
    "repositories": [
      {
        "type": "vcs",
        "url": "https://github.com/appocular/coding-standard"
      }
    ],
    "autoload": {
        "psr-4": {
            "GitHubSecurityJira\\": "src/"
        }
    },
    "require-dev": {
        "appocular/coding-standard": "^2.1.2",
        "phpstan/phpstan": "^0.12.5"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
